<script>
    $(document).ready(function() {
      
        const eventTypes = Array('event', 'holiday', 'birthday');
    $("#evoCalendar").evoCalendar({
        format: "MM dd, yyyy",
        titleFormat: "MM",
        language: "en",
        todayHighlight: true,
        sidebarToggler: true,
        eventHeaderFormat: "MM dd, yyyy",
        firstDayOfWeek: 1,
        calendarEvents: [{{#each eventList}}{
            
            id: "{{this.googleid}}",
            name: "{{this.name}}",
            date: "{{this.date}}",
            type: eventTypes[Math.floor(Math.random() * eventTypes.length)],
            
        },{{/each}}]
    });


});
</script>
    
    
